<h1>Web application Challenge 3</h1>

<%= form_tag({controller: "houses", action: "import_csv", method: "post"}, {multipart: true}) do %>
  <div class="field">
    <%= label_tag " csvファイルを選択する" %><br>
    <%= file_field_tag :csv_file %>
  </div>

  <div class="actions">
    <%= submit_tag "CSVファイルを読み込む"%>
  </div>
<% end %>
</br>
<%= link_to 'create new house', new_house_path  %>
<%= link_to '  create new energy', new_energy_path %>
</br>
</br>
click 'show' to see charts
</br>
</br>
<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>City</th>
      <th>Num of people</th>
      <th>Has child</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.firstname %></td>
        <td><%= house.lastname %></td>
        <td><%= house.city %></td>
        <td><%= house.num_of_people %></td>
        <td><%= house.has_child %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
